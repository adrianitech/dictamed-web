*
  margin 0
  padding 0
  box-sizing border-box
  font-family -apple-system

html, body
  margin 0
  padding 0
  background #F3F3F3

::-moz-selection
  color white
  background #48C9DD
  text-shadow none

::selection
  color white
  background #48C9DD
  text-shadow none

#nav
  width 800px
  height 100px
  margin 0 auto
  display block

  .search
    width 100%
    padding 12px 15px
    margin-top 40px
    background white
    border-radius 3px
    box-shadow 0 2px 2px rgba(0,0,0,.08)
    outline none
    border none
    color rgb(50,50,50)
    font-size 14px

ul#translations
  width 810px
  margin 0 auto
  display block
  list-style none

  li
    width 395px
    margin 5px
    display inline-block
    background white
    border-radius 3px
    box-shadow 0 2px 2px rgba(0,0,0,.08)
    color black
    font-size 14px
    float left
    overflow hidden

    &.validated
      border 1px solid #48C9DD

    .header
      display block
      padding 8px 10px
      background rgb(250,250,250)
      border-bottom 1px solid rgb(240,240,240)
      border-radius 3px 3px 0 0
      color rgb(100,100,100)
      font-size 12px

      a
        text-decoration none
        color #48C9DD

      .right
        float right

    .content
      width 100%
      padding 15px 20px
      display block
      background none
      border none
      outline none
      resize none
      color rgb(50,50,50)
      font-size 16px
      line-height 20px

    .footer
      display block
      padding 8px 10px
      background rgb(250,250,250)
      border-top 1px solid rgb(240,240,240)
      border-radius 0 0 3px 3px
      color rgb(100,100,100)
      font-size 12px
      overflow hidden

      .button
        padding 6px 10px
        background #48C9DD
        border-radius 3px
        display inline-block
        text-decoration none
        color white

        &.left
          margin-right 5px

        &.right
          float right
