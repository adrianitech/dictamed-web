template(name="edit")
  +header
  .container
    .page
      .inner
        h3
          | {{title}}
          +if validated
            span.label.label-valid(style="float: right;")
              i.mdi.mdi-check
              | Validated
          +else
            span.label.label-pending(style="float: right;")
              i.mdi.mdi-clock
              | Pending
        h4 {{formatDate createdAt}}
      textarea#text(style="margin-bottom: 25px; resize: none; height: 300px; width: 100%; display: block; outline: none; font-size: 1em; line-height: 1.5em;") {{translation}}
      .inner
        a.validate.label.label-valid(href="#", style="width: 16%; line-height: 36px; padding: 0 10px; border-radius: 0 4px 4px 0; text-align: center;")
          i.mdi.mdi-check
          | Mark as valid
        audio(preload="auto")
          source(src="{{audio}}", type="audio/wav")
