ul.header
  position fixed
  top 0
  left 0
  right 0
  background white
  border-bottom 1px solid #d4d4d4
  list-style none
  z-index 50
  .container
    width 816px
  li
    padding 15px 8px
    float left
    &.right
      float right
    img
      height 36px
    a, input
      height 36px
      line-height 33px
      border-radius 4px
      border 1px solid #e0e1e4
      padding 0 16px
      display inline-block
      font-size 0.8em
      font-weight 700
      color #7a7e81
      text-decoration none
    a:hover
      background #e0e1e4
    input
      min-width 200px
      outline none
      background none
      font-weight 500
